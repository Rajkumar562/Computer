import java.util.*;
public class Disarium
{
    int n;
    public Disa(int x)
    {
        n=x;
    }
    public void Disa()
    {
        String a=Integer.parseInt(n);
        a.reverse();
        
    }
    public static void main()
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter a number to be checked");
        int x=sc.nextInt();
        Special sf=new Disa(x);
        sf.isSpecial();
    }
}