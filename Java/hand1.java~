import java.util.*;
public class hand1
{ 
    int flag,f,s,c,c1,x,x1,x2,r,r1=0;
    Scanner sc = new Scanner(System.in);
    public void toss()
    {  System.out.println("Enter odd or even");
        String st=sc.nextLine();
        System.out.println("Enter the number of your choice till 6");
        int n=sc.nextInt();
        if(st.equalsIgnoreCase("o"))
            f=0;
        else
            f=1;
        while(true)
        {
            c=(int)(Math.random()*10);
            if((c<7)&&(c>0))
            {  System.out.println("Computer chooses "+c);
                break;
            }
            else
            { 
                continue;
            }
        }
        s=n+c;
        if(s%2!=0)
        { flag=0;}
        else
            flag=1;
        if(flag==f)
        { 
            System.out.println("You won");
            System.out.println("For Batting Enter 1 And For Bowling Enter 2");
            int ch=sc.nextInt();
            if(ch==1)
            {bat();bowl();}
            else
            {bowl();bat();}
        }
        else
        {
            System.out.println("Computer wins");
            while(true)
            {
                c=(int)(Math.random()*10);
                if((c==1)||(c==2))
                { if(c==1)
                    {
                        System.out.println("Computer chooses to bat ");
                        bowl();bat();
                    }
                    else
                    {
                        System.out.println("Computer chooses to bowl");
                        bat();bowl();
                    }
                    break;
                }
                else
                { 
                    continue;
                }
            }
        }
    }

    public void random()
    {
        while(true)
        {
            c1=(int)(Math.random()*10);
            if((c1<7)&&(c1>0))
            {  System.out.println("Computer chooses "+c1);
                break;
            }
            else
            { 
                continue;
            }
        }
    }

    public void bat()
    {
        System.out.println("Your Batting starts now");
        while(true)
        {
            System.out.println("Enter your number ");
            r= sc.nextInt();
            random();
            if(r!=c1)
            {
                x+=r;
                System.out.println("Your Score:"+x);
                if(x2>0)
                { System.out.println("fuck");
                    if(x>x2)
                    {System.out.println("you win");
                    break;}
                }
                continue;
            }
            else
            {
                x1=x;x=0;
                System.out.println("You're Out");
                break;}
        }   
    }

    public void bowl()
    {
        System.out.println("Your Bowling starts now");
        while(true)
        {
            System.out.println("Enter your number");
            r1= sc.nextInt();
            random();
            if(r1!=c1)
            {
                x+=c1;
                System.out.println("Computer Score:"+x);
                if(x1>0)
                {if(x>x1)
                    {System.out.println("computer win");
                    break;}
                }
                continue;
            }
            else
            {x2=x;x=0;
                System.out.println("shit");  
                break;}
        }   
    }
    void display()
    {
        System.out.println("Your Score:"+x1);
        System.out.println("Computer's Score:"+x2);
        if(x1>x2)
            System.out.println("You Win");
        else if(x1==x2)
            System.out.println("Match Draw");
        else
            System.out.println("Computer Wins");
    }

    public static void main()
    {
        hand ob=new hand();
        ob.toss();
        ob.display();
    }
}
