public class word
{
        public static String Piglatin(String str)
        {
            int firstVowelAt;
            int part1End,part2Start;
            firstVowelAt = FirstVowelPosition(str);
            String latin = " ";
            int len = str.length();
            if (firstVowelAt>0)
            {
                part1End = firstVowelAt-1;
                part2Start = firstVowelAt+1;
                latin += str.charAt (firstVowelAt)
                +=str.charAt(firstVowelAt)
                +str.substring(0,part1End)+str.substring(part2start,len)
                +"AY";
            }
            else
            latin=str+"AY";
            return latin;
        }
        public static int FirstVowelPosition(String str)
        {
            int len = str.length();
            char ch;
            for(int i = 0;i<len;i++)
            {
                ch = str.charAt(i);
                if
                (ch == 'a' ||ch =='A' ||ch =='e' || ch=='E' ||ch =='i' ||
                ch=='I' || ch =='o' || ch =='O' || ch =='u' || ch =='U')
                return i;
            }
            return-1;
        }
    }